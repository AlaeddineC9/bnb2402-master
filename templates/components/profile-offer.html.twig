{# Booking #}
<div class="col-sm-6 col-lg-6 mb-4">
	<div class="card">
		<div class="card-header d-sm-flex justify-content-between align-items-center border-0">
			<h5 class="card-title">
				Vos offers
				<span class="badge bg-danger bg-opacity-10 text-danger">{{app.user.offers|length}}</span>
			</h5>
			<a class="btn btn-primary-soft btn-sm" href="#">
				Voir tout
			</a>
		</div>
		<div class="card-body position-relative pt-3">
			<div class="row g-3">
					{% if offers|length > 0 %}
					{% for item in offers %}
						<div class="col-sm-6">
							<div class="card shadow-none text-center h-100 pb-3">
								<div class="card-body p-2 pb-0">
									<h6 class="card-title mb-1 mt-3">
										<a href="#!">
											{{ item.title|slice(0,20) }}...
										</a>
									</h6>
									<p class="mb-0 small lh-sm">{{ item.city }}</p>
								</div>
							</div>
						</div>
					{% endfor %}
				{% else %}
					<div class="col-12">
						<div class="alert alert-warning mb-0" role="alert">
							You have no bookings yet.
						</div>
					</div>
				{% endif %}
			
			</div>
		</div>
		<!-- Card body END -->
	</div>
</div>
